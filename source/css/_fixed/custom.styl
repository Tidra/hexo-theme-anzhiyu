/*
    普通page
*/
#page-header.not-home-page {
    background-color: #252525c4;
    overflow: hidden;
}
#page-header #page-site-info {
    z-index: 3;
}
#page-header #site-title {
    line-height: 1.5;
    font-weight: 700;
    font-size: 3.3rem;
    -webkit-line-clamp: 2;
    padding: 0;
    overflow: hidden;
}
#page-top-cover {
    height: 100%;
    overflow: hidden;
    transform: rotate(10deg) translateY(-10%) scale(var(--anzhiyu-header-cover-scale));
    will-change: transform;
    filter: blur(10px) brightness(60%);
    transition: filter 0s;
    margin: auto;
    width: auto;
}
img#page-top-bg {
    animation: slide-in 0.6s 0.3s backwards;
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-width: 50vw;
    min-height: 20rem;
}