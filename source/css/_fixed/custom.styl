/* 电脑屏幕标签的横向滚动条导致不一致高度问题 */
@media (any-pointer: fine) {
    #catalog-list {
        overflow-x: hidden;
    }
}
@media (any-pointer: coarse) {
    #catalog-list {
        overflow-x: scroll;
    }
}

@media screen and (max-width: 1200px) {
    /* 小屏幕文章块标题文字显示重叠问题 */
    #recent-posts > .recent-post-item >.recent-post-info.no-cover {
        padding: 0px 20px;
    }

    /* 小屏幕的文章页图片显示问题 */
    #page-header.post-bg #post-top-cover img#post-top-bg[src=''], #page-header.post-bg #post-top-cover img#post-top-bg:not([src]) {
        opacity: 0 !important;
    }
}

/* 头部横向滚动条后的文章块高度不一致问题 */
.topGroup .recent-post-item:nth-child(4), .topGroup .recent-post-item:nth-child(5), .topGroup .recent-post-item:nth-child(6) {
    margin-top: 0;
}

/* 正常模式下看不到文章标题问题 */
#page-header.post-bg {
    background-color: #252525c4;
}

/* site-card 黑暗模式不匹配 */
.site-card-group > a .info {
    background-color: var(--anzhiyu-maskbgdeep);
}
.site-card-group > a .info span {
    background-color: var(--anzhiyu-maskbgdeep);
}

/* 代码扩展按钮挡住代码问题 */
#article-container .code-expand-btn.expand-done ~ table, #article-container .code-expand-btn.expand-done ~ pre {
    margin-bottom: 32px;
}

/* 保留评论预览 */
#twikoo .tk-comments .el-button.tk-preview {
    display: block;
    border-color: var(--anzhiyu-fontcolor);
    color: currentColor;
    border-radius: 12px;
    box-shadow: var(--anzhiyu-shadow-black);
    transition: 0.3s;
    width: 3.25rem;
    position: absolute;
    top: -42px;
    right: 6.75rem;
    margin-left: 0.5rem !important;
    height: 33px;
    background-color: rgb(144 147 153 / 41%);
}
@media screen and (max-width: 768px) {
    #twikoo .tk-comments .el-button.tk-preview {
        display: block;
        height: 122px;
        top: -126px;
    }
}
#twikoo .tk-comments .el-button--primary {
    top: -42px;
    height: 33px;
}
#twikoo .tk-comments .tk-meta-input {
    width: calc(100% - 10.5rem);
}
#twikoo .tk-preview-container {
    margin-left: 0;
}

